{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
  <div class="card-body">
    <h4>Edite postagem:</h4>
    <form action="/admin/postagens/edit" method="POST">
      <input type="hidden" name="id" value="{{postagem._id}}"> <!-- Adicione este campo oculto -->
      <label for="titulo">Título:</label>
      <input type="text" name="titulo" class="form-control" required value="{{postagem.titulo}}">
      <label for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control" required value="{{postagem.slug}}">
      <label for="descricao">Descrição:</label>
      <input type="text" name="descricao" class="form-control" required value="{{postagem.descricao}}">
      <label for="conteudo">Conteúdo:</label>
      <textarea name="conteudo" cols="20" rows="4" class="form-control" required>{{postagem.conteudo}}</textarea>
      <label for="categoria">Categoria:</label>
      <select name="categoria" class="form-select mt-2">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-4">Editar postagem</button>
    </form>
  </div>
</div>
