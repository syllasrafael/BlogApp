<h2>Lista de categoria</h2>
<hr>
<a href="/admin/categoria/add"><button type="button" class="btn btn-success">Nova categoria</button></a> 

{{#each categoria}}
<div class="card mt-3">
    <div class="card-body bg-body-secondary">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small> <br>
        <small class="text-secondary">Data de criação: {{date}}</small> <br>
        <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-2 btn-sm">Editar categoria</button></a>
        <form action="/admin/categoria/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}" class="mt-3">
            <button type="submit" class="btn btn-danger btn-sm mt-2">Deletar categoria</button>
        </form>
    </div>
</div>

{{else}}
<h4 class="mt-3">Nenhum categoria registrada</h4>

{{/each}}
<div class="mb-5"></div>